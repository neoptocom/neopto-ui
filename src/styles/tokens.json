{
  "colors": {
    "brand":   { "default": "#22A9CB" },
    "bg":      { "default": "#F3F4F6", "dark": "#242832" },
    "surface": { "default": "#FFFFFF", "dark": "#2E303B" },
    "fg":      { "default": "#242832", "dark": "#E4E7EC" },
    "muted":   { "default": "#E5E7EB", "dark": "#3F424F" },
    "mutedFg": { "default": "#6B7280", "dark": "#9D9EA2" },
    "border":  { "default": "#E5E7EB", "dark": "#5C5E68" },
    "success":     { "default": "#13B59F", "dark": "#00C8AC" },
